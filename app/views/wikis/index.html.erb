<div class="row">
    <div class="col-md-8">
        <h1>My Wikis</h1>
    </div>
    <div class="col-md-4 new-div">
        <%= link_to "New Wiki", new_wiki_path, class: "btn btn-primary new-button" %>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th class="col-md-8">Name</th>
                    <th class="col-md-2">Edit Wiki</th>
                    <th class="col-md-2">Delete Wiki</th>
                </tr>
            </thead>
            <tbody>
                <% @wikis.each do |wiki| %>
                    <tr>
                        <td class="col-md-8"><%= link_to wiki.title, wiki %></td>
                        <td class="col-md-2"><%= link_to "Edit", edit_wiki_path(wiki), class: "btn btn-success" %></td>
                        <td class="col-md-2"><%= link_to "Delete", wiki, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure you want to delete this wiki?' } %></td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
